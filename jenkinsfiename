pipeline {
    agent any

    stages {

        stage('Clone') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/dilshadashraf007/myapp.git',
                    credentialsId: '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'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t python-hello-world .'
            }
        }

        stage('Run Container') {
            steps {
                bat 'docker run --rm python-hello-world'
            }
        }
    }
}
